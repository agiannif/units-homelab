[Unit]
Description=Uptime Kuma monitoring tool
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/louislam/uptime-kuma:beta
ContainerName=uptime-kuma
PublishPort=3001:3001
UserNS=keep-id
Volume=/srv/uptime-kuma/data:/app/data:Z

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=multi-user.user
